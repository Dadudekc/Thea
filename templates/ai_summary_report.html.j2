{# EDIT START - enhanced v3 - dynamic Jinja2 template #}
{#
Variables expected:
  site_name           : str          – Site/brand name for header and footer.
  generated_on        : str          – Timestamp of report generation.
  year                : str          – Current year for copyright.
  sections            : list[dict]   – Navigation sections with id and title.
  summary_cards       : list[dict]   – Summary metrics with key and label.
  summary             : dict         – Data for summary cards and highlights.
  workflow_feedback   : str          – Text for workflow feedback section.
  next_steps          : list[str]    – List of next steps.
  footer_links        : list[dict]   – (optional) Footer navigation links.
#}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{ site_name }} – AI Output Log Summary</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    /* Reset + Fonts */
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #f5f5f5;
      background-color: #121212;
      line-height: 1.6;
    }

    header, footer {
      background-color: #1f1f1f;
      color: #f5f5f5;
      padding: 20px 0;
    }

    .header-container, .footer-container, .container {
      width: 90%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .logo {
      font-size: 24px;
      font-weight: bold;
      color: #00ffd5;
      text-align: right;
    }

    .nav-list {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      list-style: none;
      padding: 0;
    }

    .nav-list li {
      margin: 10px 15px;
    }

    .nav-list a {
      color: #00ffd5;
      text-decoration: none;
    }

    .nav-list a:hover {
      text-decoration: underline;
    }

    h1, h2, h3 {
      color: #ffffff;
    }

    .hero {
      text-align: center;
      padding: 60px 20px;
    }

    .btn {
      background-color: #00ffd5;
      color: #121212;
      border: none;
      padding: 12px 24px;
      text-transform: uppercase;
      cursor: pointer;
      font-weight: bold;
      border-radius: 5px;
      transition: 0.3s ease;
    }

    .btn:hover {
      background-color: #00bfa5;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .card, .next-step-section {
      background-color: #1f1f1f;
      padding: 20px;
      border-radius: 10px;
      border: 1px solid #333;
    }

    hr {
      border: 0;
      height: 1px;
      background: #333;
      margin: 40px 0;
    }

    footer {
      text-align: center;
      font-size: 14px;
    }

    .footer-links a {
      color: #00ffd5;
      margin: 0 10px;
      text-decoration: none;
    }

    .footer-links a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

<header>
  <div class="header-container">
    <h3 class="logo">{{ site_name }}</h3>
    <nav>
      <ul class="nav-list">
        {% for sec in sections %}
        <li><a href="#{{ sec.id }}">{{ sec.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>

<div class="container">
  <section class="hero" id="introduction">
    <h1>AI Output Log Summary</h1>
    <p>Report generated on {{ generated_on }}</p>
    <a class="btn" href="#{{ sections[1].id if sections|length > 1 else 'roadmap' }}">View Details</a>
  </section>

  <hr />

  <section id="{{ sections[1].id if sections|length > 1 else 'roadmap' }}">
    <h2>{{ sections[1].title if sections|length > 1 else 'Cycle Results Overview' }}</h2>
    <div class="grid">
      {% for card in summary_cards %}
      <div class="card">
        <h3>{{ card.label }}</h3>
        <p>{{ summary[card.key] }}</p>
      </div>
      {% endfor %}
    </div>
  </section>

  <hr />

  <section id="{{ sections[2].id if sections|length > 2 else 'highlights' }}">
    <h2>{{ sections[2].title if sections|length > 2 else 'Key Highlights' }}</h2>
    <ul>
      <li>Average Response Length: {{ summary.avg_response_length }} characters</li>
      <li>Most Common Tags:
        <ul>
          {% if summary.tag_distribution %}
            {% for tag, count in summary.tag_distribution.items() %}
            <li>{{ tag }} ({{ count }})</li>
            {% endfor %}
          {% else %}
            <li>No tags found.</li>
          {% endif %}
        </ul>
      </li>
    </ul>
  </section>

  <hr />

  <section id="{{ sections[3].id if sections|length > 3 else 'workflow' }}">
    <h2>{{ sections[3].title if sections|length > 3 else 'Workflow Feedback' }}</h2>
    <p>{{ workflow_feedback }}</p>
  </section>

  <hr />

  <section id="{{ sections[4].id if sections|length > 4 else 'outcome' }}">
    <h2>{{ sections[4].title if sections|length > 4 else 'Outcome' }}</h2>
    <p>{{ summary.successful }} successful outputs. Feedback loops engaged for ongoing optimization.</p>
  </section>

  <hr />

  <section id="{{ sections[5].id if sections|length > 5 else 'next-steps' }}">
    <h2>{{ sections[5].title if sections|length > 5 else 'Next Steps' }}</h2>
    <ul>
      {% for step in next_steps %}
      <li>{{ step }}</li>
      {% endfor %}
    </ul>
  </section>
</div>

<footer class="footer">
  <div class="footer-container">
    <p>© {{ year }} {{ site_name }}. All rights reserved.</p>
    {% if footer_links %}
    <nav class="footer-links">
      {% for link in footer_links %}
      <a href="#{{ link.id }}">{{ link.title }}</a>
      {% endfor %}
    </nav>
    {% endif %}
  </div>
</footer>

</body>
</html>

{# EDIT END #}
