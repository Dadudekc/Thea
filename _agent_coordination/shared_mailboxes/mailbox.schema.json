{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Mailbox",
  "type": "object",
  "required": ["mailbox_id", "status", "owner", "messages"],
  "properties": {
    "mailbox_id": { "type": "string" },
    "status": { "type": "string", "enum": ["UNCLAIMED", "CLAIMED"] },
    "owner": { "type": ["string", "null"] },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["message_id", "timestamp", "sender", "recipient", "type", "payload"],
        "properties": {
          "message_id": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "sender": { "type": "string" },
          "recipient": { "type": "string" },
          "type": { "type": "string", "enum": ["TASK", "STATUS", "RESULT", "ALERT", "DISCOVERY"] },
          "payload": { "type": "object" }
        }
      }
    }
  }
} 