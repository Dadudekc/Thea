# Dream.OS Environment Configuration Template

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
METRICS_PORT=9090

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dreamos
DB_USER=dreamos_user
DB_PASSWORD=your_secure_password

# Redis Configuration (for queues and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Twitter API Credentials
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_token_secret

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret
LINKEDIN_ACCESS_TOKEN=your_access_token

# Facebook API Credentials
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret
FACEBOOK_ACCESS_TOKEN=your_page_access_token

# Reddit API Credentials
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USERNAME=your_username
REDDIT_PASSWORD=your_password

# Instagram API Credentials
INSTAGRAM_APP_ID=your_app_id
INSTAGRAM_APP_SECRET=your_app_secret
INSTAGRAM_ACCESS_TOKEN=your_access_token

# StockTwits API Credentials
STOCKTWITS_API_KEY=your_api_key
STOCKTWITS_ACCESS_TOKEN=your_access_token

# Sentiment Analysis Service
SENTIMENT_API_KEY=your_sentiment_api_key
SENTIMENT_API_ENDPOINT=https://api.sentiment-service.com/v1/analyze

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_USERNAME=admin
METRICS_PASSWORD=your_metrics_password

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_FEEDBACK_LOOP=true
ENABLE_METRICS_EXPORT=true

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000
RATE_LIMIT_WINDOW_MS=60000

# Memory Manager Configuration
MEMORY_CACHE_SIZE=1000
MEMORY_RETENTION_HOURS=24

# Feedback Engine
FEEDBACK_QUEUE_SIZE=1000
FEEDBACK_PROCESSING_INTERVAL_MS=5000
FEEDBACK_RETENTION_DAYS=30

# Template Configuration
TEMPLATE_CACHE_SIZE=100
SNAPSHOT_AUTO_UPDATE=false 